# ── Exchange ──────────────────────────────────────────────
EXCHANGE_NAME=bybit               # bybit | binance | okx | ...
EXCHANGE_API_KEY=your_api_key
EXCHANGE_SECRET=your_secret
EXCHANGE_SANDBOX=true              # true = demo/testnet, false = live

# ── Trading ──────────────────────────────────────────────
TRADING_SYMBOLS=BTC/USDT:USDT,ETH/USDT:USDT   # comma-separated (linear futures use :USDT suffix)
TRADING_TIMEFRAME=1m

# ── Risk (hard limits) ──────────────────────────────────
MAX_RISK_PER_TRADE=0.01            # 1% of equity per trade
MAX_DAILY_LOSS=0.05                # 5% daily loss halt

# ── Scanner (auto coin selection) ───────────────────────
SCANNER_ENABLED=true
SCANNER_INTERVAL_MINUTES=15
SCANNER_MAX_POSITIONS=5
SCANNER_PORTFOLIO_PCT=0.50         # 50% of equity for auto-selected coins
SCANNER_MIN_VOLUME_24H=1000000     # minimum $1M daily volume
SCANNER_BLACKLIST=                  # e.g. SHIB/USDT:USDT,DOGE/USDT:USDT

# ── LLM Advisory (optional) ────────────────────────────
LLM_ENABLED=false
LLM_API_KEY=

# ── Logging ─────────────────────────────────────────────
LOG_LEVEL=INFO
