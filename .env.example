# Exchange API Configuration
EXCHANGE_API_KEY=your_api_key_here
EXCHANGE_SECRET=your_secret_here

# Trading Configuration
TRADING_SYMBOLS=BTC/USDT,ETH/USDT
TRADING_TIMEFRAME=1m
MAX_POSITION_SIZE=0.1

# Risk Configuration
MAX_RISK_PER_TRADE=0.01
MAX_DAILY_LOSS=0.05

# LLM Configuration (optional)
LLM_ENABLED=false
LLM_API_KEY=your_llm_api_key_here

# Scanner Configuration (auto coin selection)
SCANNER_ENABLED=true
SCANNER_INTERVAL_MINUTES=15
SCANNER_QUOTE_CURRENCY=USDT
SCANNER_MIN_VOLUME_24H=1000000
SCANNER_MAX_POSITIONS=5
SCANNER_PORTFOLIO_PCT=0.50
SCANNER_BLACKLIST=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=trade_bot.log

# Database Configuration
JOURNAL_DB_PATH=~/.trade_bot/journal.db
